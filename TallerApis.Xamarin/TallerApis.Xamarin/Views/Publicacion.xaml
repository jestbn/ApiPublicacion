<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerApis.Xamarin.Views.Publicacion">
    <ListView x:Name="ListPublicacion" ItemSelected="ListPublicacion_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell Text="{Binding User}"
                           Detail="{Binding Descripcion}"
                           >
                    
                </ImageCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>